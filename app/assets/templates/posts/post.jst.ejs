<h4>
  post# <%= post.get('id') %>, created at: <%= post.get('created_at') %>
</h4>

<p>
  <% var postRef = post.escape('post_id') %>
  <% if (postRef) { %>
    <a href="#<%= postRef %>" title="in reply to"><img src="/assets/reply.png" width="16px">
      <%= postRef %></a>
  <% } %>
</p>

<p style="white-space: pre-wrap"><%= post.escape('body') %>
  <br> - <%= post.escape('signature') %>
</p>

<p>
  <% var postLink = post.escape('link') %>
  <% if (postLink) { %>
    <a href="<%= postLink %>" target="_blank">
      <img src="/assets/link.png" width="16px">
      <% if (postLink.length < 45) { %>
        <%= postLink %>
      <% } else { %>
        <%= postLink.slice(0, 45) %>...
      <% } %>
    </a>
  <% } %>
</p>
