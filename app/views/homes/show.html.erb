<script>
  $(document).ready(function() {
    function scrollToAnchor(aid){
      var aTag = $(aid);
      $('html,body').animate({scrollTop: aTag.offset().top},'slow');
    }

    $('.link').click(function() {
      event.preventDefault();
      scrollToAnchor($(event.target).attr('href'));
    });
  });
</script>

