<div class="sidebar">
  <ul id="sidebar-items">
    <li id="auth-info" class="sidebar-item">
      <% if !current_user.nil? %>
        <ul style="list-style: none">
          <li>logged in as: <%= current_user.username %></li>
          <li><%= button_to "logout", session_url, method: :delete %></li>
        </ul>
      <% else %>
        <ul style="list-style: none">
          <li>logged in as: GUEST</li>
          <li><%= button_to "login", new_session_url, method: :get %></li>
        </ul>
      <% end %>
    </li>

    <li id="soapboxes-li" class="sidebar-item">
      <a href="<%= root_url %>">soapBoxes</a>
    </li>

    <li id="lockboxes-li" class="sidebar-item">
      <a href="<%= lockboxes_url %>">lockBoxes</a>
    </li>

    <li id="mailboxes-li" class="sidebar-item">
      <a href="<%= mailboxes_url %>">mailBoxes</a>
    </li>

    <li id="inbox-li" class="sidebar-item">
      <a href="#">inBox</a>
    </li>

    <li id="outbox-li" class="sidebar-item">
      <a href="#">outBox</a>
    </li>

    <li id="add-li" class="sidebar-item">
      <a href="#">add</a>
      <div id='add-form'></div>
    </li>

    <li id="refresh-li" class="sidebar-item">
      <a href="#">refresh</a>
    </li>
  </ul>
</div>