<div class="sidebar">
<% if !current_user.nil? %>
  <ul style="list-style: none">
    <li>logged in as: <%= current_user.username %></li>
    <li><%= button_to "logout", session_url, method: :delete %></li>
  </ul>
<% else %>
  <ul style="list-style: none">
    <li>logged in as: GUEST</li>
    <li><%= button_to "login", new_session_url, method: :get %></li>
  </ul>
<% end %>

</div>